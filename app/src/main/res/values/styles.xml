<resources>
<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

<style name="MyCustomCalcStyleButtonNumber" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">@dimen/number_size</item>
    <item name="android:layout_height">@dimen/number_size</item>
    <item name="android:background">@android:color/holo_purple</item>
    <item name="android:textColor">@android:color/white</item>

</style>
<style name="MyCustomCalcStyleButtonZero" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">@dimen/number_width</item>
    <item name="android:layout_height">@dimen/numbers_height</item>
    <item name="android:background">@android:color/holo_purple</item>
    <item name="android:textColor">@android:color/white</item>
</style>
<style name="MyCustomCalcStyleFuncButtons" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">@dimen/number_size</item>
    <item name="android:layout_height">@dimen/number_size</item>
    <item name="android:background">@android:color/holo_orange_dark</item>
    <item name="android:textColor">@android:color/white</item>
</style>

</resources>