<resources>
<!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyCustomCalcStyleButtonNumber" >
        <item name="android:layout_width">@dimen/number_size</item>
        <item name="android:layout_height">@dimen/number_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize</item>
    </style>
    <style name="MyCustomCalcStyleButtonNumberHorizontal" >
        <item name="android:layout_width">@dimen/number_size_horizontal</item>
        <item name="android:layout_height">@dimen/number_size_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_horizontal</item>
    </style>
        <style name="MyCustomCalcStyleButtonZero">
        <item name="android:layout_width">@dimen/number_width</item>
        <item name="android:layout_height">@dimen/numbers_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize</item>
    </style>
    <style name="MyCustomCalcStyleButtonZeroHorizontal">
        <item name="android:layout_width">@dimen/number_size_horizontal</item>
        <item name="android:layout_height">@dimen/number_size_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_horizontal</item>
    </style>
    <style name="MyCustomCalcStyleFuncButtons">
        <item name="android:layout_width">@dimen/number_size</item>
        <item name="android:layout_height">@dimen/number_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize</item>
    </style>
    <style name="MyCustomCalcStyleFuncButtonsRefresh">
        <item name="android:layout_width">@dimen/size_horizontal_refresh</item>
        <item name="android:layout_height">@dimen/number_size_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_horizontal</item>
    </style>
    <style name="MyCustomCalcStyleFuncButtonsHorizontal">
        <item name="android:layout_width">@dimen/number_size_horizontal</item>
        <item name="android:layout_height">@dimen/number_size_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_horizontal</item>
    </style>
    <style name="ButtonChangeTheme">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>